<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="baseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_color</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- Style untuk teks ChatGPT -->
    <style name="ChatGPTText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Style umum untuk tombol -->
    <style name="AuthButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <!-- Style untuk tombol Google Sign-In -->
    <style name="AuthButton.Google" parent="AuthButton">
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawableStart">@drawable/ic_google</item>
    </style>

    <!-- Style untuk tombol Login -->
    <style name="AuthButton.Login" parent="AuthButton">
        <item name="android:backgroundTint">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>